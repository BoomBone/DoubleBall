<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/OneRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/TwoRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/ThreeRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/FourRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/FiveRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/SixRedTv"
                style="@style/TextBall" />
        </RelativeLayout>

        <RelativeLayout style="@style/TextBRl">

            <TextView
                android:id="@+id/OneBlueTv"
                style="@style/TextBallBlue" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>